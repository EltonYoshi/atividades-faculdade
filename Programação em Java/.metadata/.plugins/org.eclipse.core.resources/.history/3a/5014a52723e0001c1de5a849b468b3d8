package app;
import java.io.*;
import java.io.File;
import java.io.IOException;
import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		File arquivo = new File("C:\\medicamentos.csv");
		Scanner sc = new Scanner(System.in);
		String linhasDoArquivo = new String();
		ListaMedicamentos l1 = new ListaMedicamentos();
		int opcao;
		
		
		
		try {
			sc = new Scanner(arquivo);
			while(sc.hasNextLine()) {
				
				linhasDoArquivo = sc.nextLine();
				String[] campos = linhasDoArquivo.split(";");
				if (campos.length >= 2) {
					Medicamento m1 = new Medicamento(campos[0],campos[1], campos[2],campos[3]);
					l1.adicionarLista(m1);
				}
				
			
			}
			
			sc.close();
		}
		
		catch (IOException e){
			
		}
		
		
	
		do {
			System.out.println("DIGITE");
			System.out.println("1- Procurar Medicamento");
			opcao = sc.nextInt();
			switch(opcao) {
			case 1:
				System.out.println("Digite o nome do remédio: ");
				String medicamento = sc.nextLine().toUpperCase();
				l1.procurarNome(medicamento);
				break;
			}
		}while(opcao != 0);
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
	}

}
